<?xml version="1.0" encoding="utf-8"?>

<!-- Main Content -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/alarm_time_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="72sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/primary_text_default_material_dark"/>

            <TextView
                android:id="@+id/alarm_time_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/alarm_time_hours"
                android:textSize="72sp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/primary_text_default_material_dark"/>

            <TextView
                android:id="@+id/alarm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/alarm_time_hours"
                android:textSize="16sp"
                android:textColor="@color/primary_text_default_material_dark"/>

            <TextView
                android:id="@+id/alarm_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/alarm_name"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/secondary_text_default_material_dark"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/alarm_active"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                />

            <!--<ImageButton
                android:id="@+id/alarm_overflow_menu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignBottom="@id/alarm_days"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_white"
                style="?android:attr/borderlessButtonStyle"/>-->

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_divider"/>

</LinearLayout>
